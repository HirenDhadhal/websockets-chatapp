generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  image String?
  Chats Chats[]
}

model ChatMessages {
  id Int @id @default(autoincrement())
  ChatId Int
  text String
  sentAt String
  userEmail String
}

model ChatUserMapping {
  id Int @id @default(autoincrement())
  userEmail String
  chatId Int
  @@unique([userEmail, chatId])
}

model Chats {
  id Int @id @default(autoincrement())
  isGroup Boolean
  chatName String
  chatId Int @unique
  createdAt String
  createdBy String
  user User @relation(fields: [createdBy], references: [email])
}